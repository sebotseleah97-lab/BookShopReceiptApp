@page
@model BookShop.Pages.ReceiptModel

<div class="receipt">
    <h1>🧾 Book Shop Receipt</h1>

    <table>
        <tr>
            <th>Item</th>
            <th>Original (R)</th>
            <th>Discount (10%)</th>
            <th>After Discount (R)</th>
        </tr>

        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>R @item.Price</td>
                <td>-R @item.DiscountAmount</td>
                <td>R @item.PriceAfterDiscount</td>
            </tr>
        }
    </table>

    <hr />

    <p><strong>Subtotal:</strong> R @Model.SubTotal</p>
    <p><strong>VAT (15%):</strong> R @Model.VATAmount</p>
    <p style="color:purple;font-size:18px;">
        <strong>Total:</strong> R @Model.Total
    </p>

    <p style="text-align:center;color:purple;">
        Thank you for shopping at <strong>Book Shop</strong> 💜
    </p>
</div>
